{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "cd frontend && pnpm lint --fix 2>/dev/null || true"
          },
          {
            "type": "command",
            "command": "cd backend && go fmt ./... 2>/dev/null || true"
          }
        ]
      }
    ]
  },
  "enabledMcpjsonServers": [
    "github"
  ],
  "enableAllProjectMcpServers": true
}
